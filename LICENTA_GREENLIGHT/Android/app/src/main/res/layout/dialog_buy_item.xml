<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:backgroundTint="@color/black_green"
        android:layout_height="240dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/buy_text"
                android:textColor="@color/white_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="28sp"
                android:fontFamily="@font/akaya_telivigala"
                android:text="How many vouchers do you want to buy?"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView6"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/akaya_telivigala"
                android:padding="15dp"
                android:text="1"
                android:layout_marginEnd="80dp"
                android:textSize="36sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/buy_text" />

            <Button
                android:id="@+id/down_the_number_of_vouchers"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:text="-"

                android:backgroundTint="@color/light_green1"
                app:layout_constraintBottom_toBottomOf="@+id/textView6"
                app:layout_constraintEnd_toStartOf="@+id/textView6"
                app:layout_constraintTop_toTopOf="@+id/textView6" />

            <Button
                android:id="@+id/add_number_of_vouchers"
                android:layout_width="55dp"
                android:backgroundTint="@color/light_green1"
                android:layout_height="55dp"
                android:text="+"
                app:layout_constraintBottom_toBottomOf="@+id/textView6"

                app:layout_constraintStart_toEndOf="@+id/textView6"
                app:layout_constraintTop_toTopOf="@+id/textView6" />

            <ImageView
                android:id="@+id/confirm_button_to_buy_vouchers"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/ic_aprove"
                app:layout_constraintBottom_toBottomOf="@+id/add_number_of_vouchers"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/add_number_of_vouchers"
                app:layout_constraintTop_toTopOf="@+id/add_number_of_vouchers" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>